
@{
    ViewBag.Title = "Incluir";
}

<div ng-controller="categoriaController as vm">
    
    <h2>Incluir Categoria</h2>
    <form name="frmIncluir">

        <div class="form-group">
            <label>Descrição</label>
            <input type="text" class="form-control" placeholder="Descrição da categoria"
                   ng-model="categoria.Descricao" ng-required="true">
            <small class="form-text text-muted">Informe uma categoria legal para a categoria.</small>
        </div>
        <div class="form-group">
            <label>Slug</label>
            <input type="text" class="form-control" placeholder="Slug da categoria"
                   ng-model="categoria.Slug" ng-required="true">
            <small class="form-text text-muted">Separe as palavras por traços.</small>
        </div>
        <button class="btn btn-success" 
                ng-click="vm.incluir(categoria)"
                ng-disabled="frmIncluir.$invalid">Salvar</button>

        <a href="@Url.Action("Index","Categorias", new { @area="Admin" },null)">Voltar para Categorias</a>
    </form>

</div>

